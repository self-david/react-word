{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "plugin:react/jsx-runtime", "standard", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-new": "warn",
    "no-unused-vars": "error",
    "react/prop-types": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "array-callback-return": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-eval": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "_": true
  }
}
